                </StackPanel>
                <StackPanel Height="34" Width="228" Orientation="Horizontal">
                    <TextBlock Text="4. " VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Username" VerticalAlignment="Center" FontSize="16"/>
                    <Image Source="C:\Users\herta\Desktop\Repo\imgs\fire_icon.png" Width="24" Height="18" Margin="5" VerticalAlignment="Center"/>
