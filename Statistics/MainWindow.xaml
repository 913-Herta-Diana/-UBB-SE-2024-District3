        xmlns:local="clr-namespace:Statistics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229.573"/>
            <ColumnDefinition Width="18.427"/>
            <ColumnDefinition Width="*"/>
