        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="72,0,44,0">
            <!-- First circle with bold text and normal text -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" Width="180">
                <StackPanel>
                    <TextBlock Text="Bold Text 1" FontWeight="Bold"/>
                    <TextBlock Text="Normal Text 1"/>
                </StackPanel>
                <Ellipse Width="100" Height="100" Fill="Red"/>
            </StackPanel>
            <!-- Second circle with bold text and normal text -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Ellipse Width="100" Height="100" Fill="Green" Margin="0,0,10,0"/>
