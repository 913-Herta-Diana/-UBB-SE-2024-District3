                </StackPanel>
                <StackPanel Height="34" Width="228" Orientation="Horizontal">
                    <TextBlock Text="5. " VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Username" VerticalAlignment="Center" FontSize="16"/>
